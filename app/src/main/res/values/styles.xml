<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewStyle" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- stick nearer to a headline -->
        <item name="android:paddingTop">@dimen/tiny_space</item>
    </style>

    <style name="TextViewStyle.Bold">
        <!-- get space to previous content -->
        <item name="android:paddingTop">@dimen/normal_space</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
